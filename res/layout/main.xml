<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#DFDEDE">
    
    <LinearLayout
        android:id="@+id/anim_region"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:background="#DFDEDE">
	    
	    <!-- 広告領域 -->
	    <!-- 
	    <RelativeLayout
			android:id="@+id/adcontainer"  
			android:layout_width="fill_parent"   
			android:layout_height="wrap_content">
			<mediba.ad.sdk.android.openx.MasAdView
			    android:id="@+id/adview"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"/>         
		</RelativeLayout>
	     -->
	         
	    <!-- header -->
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:orientation="horizontal"
	        android:background="#FF0000">
	       
	        <ImageView
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:layout_gravity="left"
	            android:scaleType="fitStart"
	            android:paddingLeft="7dp"
	            android:src="@drawable/head_ultra100" />
	        <ImageButton
	            android:id="@+id/btn_bros_list"
	            android:layout_width="wrap_content"
	            android:layout_height="42dp"
	            android:scaleType="fitEnd"
	            android:layout_gravity="top"
	            android:layout_marginRight="10dp"
	            android:layout_marginLeft="5dp"
	            android:layout_marginTop="-2dp"
	            android:background="@null"
	            android:src="@drawable/button_bros_list"
	            android:onClick="onClickBtnBrosList" />
	    </LinearLayout>
	    
	    <RelativeLayout
	        android:orientation="vertical"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent">
	        
		    <ImageView
		        android:id="@+id/top_image"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:scaleType="fitStart"
	            android:layout_alignParentTop="true"
	            android:src="@drawable/top" />
	    
		    <LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:gravity="center|center_vertical">
				<ToggleButton
		            android:id="@+id/btn_transform"
		            android:layout_width="105dp"
		            android:layout_height="105dp"
		            android:layout_marginTop="37dp"
		            android:textOn=""
		            android:textOff=""
		            android:background="@drawable/transform_toggle_button" 
		            android:onClick="onClickBtnTransForm" /> 
		    </LinearLayout>
	        
	        <ImageButton
            	android:id="@+id/btn_sensor_adjust"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/button_sensor_adjust"
                android:onClick="onClickBtnSensorAdjust" />
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="bottom"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentBottom="true"
	            android:orientation="vertical">
				<ImageButton
	               android:id="@+id/btn_complete"
	               android:layout_width="100dp"
	               android:layout_height="30dp"
	               android:visibility="invisible"
	               android:background="@null"
	               android:scaleType="fitCenter"
	               android:layout_marginRight="15dp"
	               android:layout_marginBottom="10dp"
	               android:src="@drawable/button_complete"
	               android:onClick="onClickBtnComplete" />
	            <ImageButton
	               android:id="@+id/btn_review_up"
	               android:layout_width="100dp"
	               android:layout_height="30dp"
	               android:background="@null"
	               android:scaleType="fitCenter"
	               android:layout_marginRight="15dp"
	               android:layout_marginBottom="15dp"
	               android:src="@drawable/button_review_up"
	               android:onClick="onClickBtnReviewUp" />
	        </LinearLayout>
	       
	    </RelativeLayout>
	</LinearLayout>
</LinearLayout>